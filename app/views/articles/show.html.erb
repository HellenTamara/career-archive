<%= link_to "<- All articles", articles_path, class: "mt-3 ms-3" %>
<div class="entry-page ">
  <div class="objectives-container">
    <h2>Objectives</h2>
    <% @objectives.each do |objective| %>
      <% if !objective.achieved? %>
        <div class="d-flex flex-direction-row ">
          <%= simple_form_for objective do |f| %>
            <%= f.input :achieved, as: :hidden, label: false, input_html: { value: true } %>
            <%= button_tag(type: 'submit', class: 'button-confirm') do %>
              <i class="fa-regular fa-circle-check" style="color: #7b5ff1;"></i>
            <% end %>
          <% end %>
          <%= objective.name %>
        </div>
      <% else %>
        <p ><i class="fa-solid fa-circle-check" style="color: #7b5ff1;"></i><%= objective.name %></p>
      <% end %>
    <% end %>
    <button type="button" class="btn new-objective-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Add new objective
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= simple_form_for Objective do |f| %>
              <%= f.input :name %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <%= f.button :submit, "create" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content-container">
    <div class="heading">
      <h2><%= @article.title%></h2>
      <p> <%= @article.date %> </p>
    </div>
    <div class="files">
      <% if @article.photos.attached?%>
        <% @article.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class: "file"%>
        <% end %>
      <% end %>
    </div>
    <p><%= @article.content%></p>
    <div class="icons">
      <%= link_to edit_article_path do %>
        <i class="fa-regular fa-pen-to-square" style="color: #7b5ff1;"></i>
      <% end %>
      <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-regular fa-trash-can" style="color: #7b5ff1;"></i>
      <% end %>
    </div>
  </div>
</div>
