  <%= simple_form_for @entry do |f| %>
    <%= f.input :title %>
    <%= f.input :date %>
    <%= f.input :content, as: :rich_text_area, class: 'trix-content', label: false %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
    <%= f.button :submit, class: "new-entry-btn" %>
  <% end %>
